<web-app>
  <display-name>MizDooni</display-name>
  <listener>
    <listener-class>Servlet.InitializationListenerServlet</listener-class>
  </listener>
  <servlet>
    <servlet-name>RestaurantsServlet</servlet-name>
    <servlet-class>Servlet.RestaurantsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RestaurantsServlet</servlet-name>
    <url-pattern>/restaurants</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>Servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginController</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/errors/error.jsp</location>
  </error-page>
</web-app>
