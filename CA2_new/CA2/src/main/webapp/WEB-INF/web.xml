<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Mizdooni</display-name>
  <listener>
    <listener-class>Servlet.InitializationListenerServlet</listener-class>
  </listener>
  <servlet>
    <servlet-name>Servlet.RestaurantsServlet</servlet-name>
    <servlet-class>Servlet.RestaurantsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet.RestaurantsServlet</servlet-name>
    <url-pattern>/restaurants</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/errors/error.jsp</location>
  </error-page>
</web-app>
